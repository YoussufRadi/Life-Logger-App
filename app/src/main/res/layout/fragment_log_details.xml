<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.winterproject.youssufradi.life_logger.Log.NewLogFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/input_register_hint"
            android:text="Highlight View"
            android:textSize="14dp"
            android:textAlignment="center"
            android:padding="14dp"
            android:textColor="@color/btn_login_bg"/>

        <!--Highlight Insertion-->
        <TextView
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
            android:text="Highlights"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/log_highlight_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:hint="Highlight Details :D"
            android:inputType="textMultiLine" />

        <!--Location Selection-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
                android:text="Location"
                android:textStyle="bold"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/log_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:hint="Highlight Details :D"
                android:inputType="textMultiLine" />

        </LinearLayout>

        <!--Date Selection-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
                android:text="Date of Highligh"
                android:textStyle="bold"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/log_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:hint="Highlight Details :D"
                android:inputType="textMultiLine" />

        </LinearLayout>

        <!--Images Selection-->
        <TextView
            android:paddingLeft="20dp"
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Base.ThemeOverlay.AppCompat.Light"
            android:text="Images Added"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/log_gallery_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/log_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_main"
            android:text="Close"
            android:textColor="@color/btn_login_bg"/>
    </LinearLayout>
</ScrollView>